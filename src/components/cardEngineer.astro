---
interface Engineer {
  name: string;
  role: string;
  experience: string;
  techStack: string[];
  hourRate: string;
  generalSummary: string;
}
interface Props extends Engineer {}

const { name, role, experience, techStack, hourRate, generalSummary }: Engineer = Astro.props;
---

<div class="card">
  <div class="card__header">
<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class="feather feather-user"
  width="100"
  height="100"
>
  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
  <circle cx="12" cy="7" r="4"></circle>
</svg>

  </div>

  <div class="card__body">
    <h2 class="card__title">{name}</h2>
    <p class="card__role">{role} â€¢ {experience}</p>
    <p class="card__summary">{generalSummary}</p>
  </div>

  <div class="card__tech-stack">
    <h3>Tech Stack:</h3>
    <div class="card__tech-items">
      {techStack.map((tech) => (
        <span class="card__tech-item">{tech}, </span>
      ))}
    </div>
  </div>

  <div class="card__footer">
    <span class="card__rate">Rate: {hourRate}</span>
  </div>
</div>

<style lang="scss">
    .card {
  max-width: 350px;
  margin: 0 auto;
  border: 1px solid #e5e7eb;
  border-radius: 0.75rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  overflow: hidden;

  &__header {
    background-color: #FD6946;
    padding: 1rem;
    display: flex;
    justify-content: center;
  }

  &__image {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    border: 2px solid #e5e7eb;
    object-fit: cover;
  }

  &__body {
    padding: 1.5rem;

    &__title {
      font-size: 1.25rem;
      font-weight: 700;
      color: #1f2937;
    }

    &__role {
      font-size: 0.875rem;
      color: #6b7280;
    }

    &__summary {
      font-size: 0.875rem;
      color: #374151;
      margin-top: 0.5rem;
    }
  }

  &__tech-stack {
    padding: 1.5rem;

    h3 {
      font-size: 0.875rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    &__tech-items {
      display: flex;
      flex-wrap: wrap;
    }

    &__tech-item {
      font-size: 0.75rem;
      font-weight: 500;
      margin-right: 0.5rem;
      margin-bottom: 0.5rem;
      padding: 0.25rem 0.75rem;
      border-radius: 0.375rem;
    }
  }

  &__footer {
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid #e5e7eb;

    &__rate {
      font-size: 0.875rem;
    }
  }
}

</style>